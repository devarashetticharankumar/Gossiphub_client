RewriteEngine On

# Redirect www to non-www
RewriteCond %{HTTP_HOST} ^www\.gossiphub\.in [NC]
RewriteRule ^(.*)$ https://gossiphub.in/$1 [L,R=301]

# Redirect Sitemap to Backend
RewriteRule ^sitemap\.xml$ https://backendserver.gossiphub.in/sitemap.xml [P]

# SPA Fallback
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.html [L]
